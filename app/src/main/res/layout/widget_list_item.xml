<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/widget_list_item"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/widget_star"
        android:src="@drawable/star_selected" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="@dimen/widgetListViewItemTextViewPadding"
        android:textColor="@color/colorFullBlack"
        android:textSize="@dimen/widgetListViewItemTextViewTextSize"
        android:id="@+id/widget_list_item_tv"/>


</LinearLayout>