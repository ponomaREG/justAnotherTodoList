<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/task"
    android:id="@+id/line_parentLL"
    android:layout_marginTop="@dimen/viewTaskInRvMarginTop"
    android:layout_marginEnd="@dimen/viewTaskInRvMarginSide"
    android:layout_marginStart="@dimen/viewTaskInRvMarginSide"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/line_llStar"
        android:layout_gravity="center"
        android:paddingStart="@dimen/taskStarPadding"
        android:paddingEnd="@dimen/taskStarPadding"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="RtlSymmetry">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/taskStarSize"
            android:layout_height="@dimen/taskStarSize"
            android:src="@drawable/star_selected"
            android:id="@+id/line_star" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:background="@drawable/task_selector"
        android:id="@+id/line_textview_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent">
<TextView
    android:id="@+id/task"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:gravity="center_vertical"
    android:padding="@dimen/viewTaskInRvPaddingSide"
    android:minHeight="?android:attr/listPreferredItemHeight">
</TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_llIcon"
        android:background="@drawable/task_icon_ll_style"
        android:padding="@dimen/taskIconPadding"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="@dimen/taskIconSize"
        android:layout_height="@dimen/taskIconSize"
        android:id="@+id/line_IconSetDoneOrUndone" />
    </LinearLayout>
</LinearLayout>
