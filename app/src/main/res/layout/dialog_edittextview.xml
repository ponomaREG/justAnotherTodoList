<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dialogPaddingEditTextSide"
    android:paddingEnd="@dimen/dialogPaddingEditTextSide"
    android:paddingTop="@dimen/dialogPaddingEditTextTop"
    android:orientation="vertical"
    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_newTask"
        android:hint="@string/dialog_edit_editText_hint"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_marginTop="@dimen/dialogLLButtonMarginTop"
        android:layout_marginBottom="@dimen/dialogLLButtonMarginBottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/dialog_alert_cancel"
            android:textColor="@color/colorFullBlack"
            android:background="@drawable/dialog_button_style"
            android:textSize="@dimen/dialogButtonTextSize"
            android:layout_weight="1"
            android:layout_margin="@dimen/dialogButtonMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/dialog_alert_edit_or_create"
            android:textColor="@color/colorFullBlack"
            android:background="@drawable/dialog_button_style"
            android:textSize="@dimen/dialogButtonTextSize"
            android:layout_weight="1"
            android:layout_margin="@dimen/dialogButtonMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
